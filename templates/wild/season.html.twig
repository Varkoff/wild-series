{% extends 'base.html.twig' %}
{% block title %}Season{% endblock %}
{% block body %}
    <div class="container">
        <h1>{{ program.title }}</h1>
        <h2>Season {{ season.number }} ({{ season.year }})</h2>
        {% for episode in episodes %}
            <div class="col">
                <a href="/wild/episode/{{ episode.id }}"><h3>{{ episode.number }}. {{ episode.title }}</h3></a>
                <p>{{ episode.synopsis }}</p>
            </div>
        {% endfor %}
    </div>
