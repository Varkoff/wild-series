{% extends 'base.html.twig' %}
{% block title %}Show By Category{% endblock %}
{% block body %}
    <div class="container">
        {% if categories %}
            <h1>{{ categories.id }} / {{ categories.name }}</h1>
        {% else %}
            <h1>Aucune catégorie sélectionnée</h1>
        {% endif %}
        {% for program in programs %}
            <h2>{{ program.id }} / {{ program.title }}</h2>
            <div class="row">
                <div class="col"><img style="width:300px;height: auto;" src="{{ program.poster }}"/></div>
                <div class="col"><p>{{ program.summary }}</p></div>
            </div>
        {% endfor %}
    </div>


{% endblock %}