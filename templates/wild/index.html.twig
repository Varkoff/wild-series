{% extends 'base.html.twig' %}
{% block title %}Wild/{% endblock %}
{% block body %}
    <div class="container">
        <h1>Liste des séries</h1>
        <table class="table">
            <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">série</th>
                <th scope="col">sommaire</th>
                <th scope="col">poster</th>
                <th scope="col">Link</th>
            </tr>
            </thead>
            {% for program in programs %}
                <tr>
                    <td>{{ program.id }}</td>
                    <td>{{ program.title }}</td>
                    <td>{{ program.summary }}</td>
                    <td>
                        <img style="width:200px;height:auto;" src="{{ program.poster }}"/>
                    </td>
                    <td><a href="/wild/show/{{ program.title|replace({' ': '-'})|lower }}">Visiter</a></td>
                </tr>
            {% else %}
                <h2>Aucune série trouvée.</h2>
            {% endfor %}
            <a href="{{ path('app_index') }}">
                Retour à l'accueil
            </a>
            </tbody>
        </table>
    </div>
{% endblock %}